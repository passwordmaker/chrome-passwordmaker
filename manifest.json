{
  "name": "PasswordMaker Pro",
  "short_name": "PasswordMaker Pro",
  "version": "0.7.0",
  "manifest_version": 2,
  "description": "Generate strong and unique passwords for every webpage using a cryptographic hash algorithm of your choice - Based on passwordmaker.org",
  "homepage_url": "https://github.com/passwordmaker/chrome-passwordmaker",
  "icons": { 
    "16": "images/passwdmaker16.png",
    "48": "images/passwdmaker48.png",
    "128": "images/passwdmaker128.png"
  },
  "browser_action": {
    "default_icon": "images/passwdmaker48.png",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [ {
    "js": [ "javascript/content.js" ],
    "matches": [ "http://*/*", "https://*/*" ],
    "all_frames": true
  } ],
  "background": {
    "scripts": [ "javascript/background.js" ]
  },
  "options_page": "html/options.html",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Z"
      }
    }
  }
}
